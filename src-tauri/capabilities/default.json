{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:allow-applocaldata-read",
    "fs:allow-create",
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$APPLOCALDATA/*" }]
    }
  ]
}
